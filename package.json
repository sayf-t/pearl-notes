{
  "name": "p2p-game",
  "pear": {
    "name": "p2p-game",
    "type": "desktop",
    "pre": "pear-electron/pre",
    "gui": {
      "height": 800,
      "width": 1200,
      "main": "index.html",
      "commandLineSwitches": [
        "--disable-gpu",
        "--disable-software-rasterizer",
        "--ignore-gpu-blacklist"
      ]
    }
  },
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build:ui": "node ./scripts/build-ui.mjs",
    "watch:ui": "node ./scripts/build-ui.mjs --watch",
    "predev": "npm run build:ui",
    "dev": "pear run -d .",
    "test": "brittle test/*.test.js"
  },
  "dependencies": {
    "corestore": "^6.15.0",
    "events": "^3.3.0",
    "htm": "^3.1.1",
    "hyperdrive": "^11.0.0",
    "hyperswarm": "^4.5.0",
    "localdrive": "^2.2.0",
    "lucide-react": "^0.555.0",
    "markdown-it": "^14.1.0",
    "mirror-drive": "^1.10.0",
    "pear-bridge": "^1.2.4",
    "pear-electron": "^1.7.25",
    "qrcode-generator": "^1.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sodium-javascript": "^0.8.0",
    "sweetalert2": "^11.14.4"
  },
  "devDependencies": {
    "brittle": "^3.0.0",
    "esbuild": "^0.27.0",
    "esbuild-css-modules-plugin": "^3.1.5",
    "pear-interface": "^1.0.0"
  }
}
